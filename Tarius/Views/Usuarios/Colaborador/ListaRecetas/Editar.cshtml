@model Tarius.Models.Colaborador.Receta

@{
    ViewData["Title"] = "Editar Receta";
}

<h2>Editar Receta</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="TiempoPreparacion" class="form-label">Tiempo de Preparación (minutos)</label>
        <select asp-for="TiempoPreparacion" class="form-control">
            @for (int i = 5; i <= 180; i += 5)
            {
                <option value="@i" selected="@(Model.TiempoPreparacion == i)">
                    @i minutos
                </option>
            }
        </select>
    </div>

    <div class="mb-4">
        <label asp-for="Tipo" class="block font-medium">Tipo</label>
        <select asp-for="Tipo" class="border p-2 w-full">
            <option value="Desayuno" selected="@(Model.Tipo == "Desayuno")">Desayuno</option>
            <option value="Almuerzo" selected="@(Model.Tipo == "Almuerzo")">Almuerzo</option>
            <option value="Merienda" selected="@(Model.Tipo == "Merienda")">Merienda</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Calorias" class="form-label">Calorías</label>
        <input asp-for="Calorias" class="form-control" />
        <span asp-validation-for="Calorias" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ingredientes</label>
        <div id="ingredientesContainer">
            @for (int i = 0; i < Model.Ingredientes.Count; i++)
            {
                <div class="input-group mb-2">
                    <input name="Ingredientes[@i].Nombre" value="@Model.Ingredientes[i].Nombre" class="form-control" placeholder="Nombre" />
                    <input name="Ingredientes[@i].Cantidad" value="@Model.Ingredientes[i].Cantidad" class="form-control" placeholder="Cantidad" />
                    <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">X</button>
                </div>
            }
        </div>
        <button type="button" class="btn btn-secondary" onclick="agregarIngrediente()">Añadir Ingrediente</button>
    </div>

    <div class="mb-3">
        <label class="form-label">Pasos</label>
        <div id="pasosContainer">
            @for (int i = 0; i < Model.Pasos.Count; i++)
            {
                <div class="input-group mb-2">
                    <input name="Pasos[@i].Orden" type="hidden" value="@(i + 1)" />
                    <textarea name="Pasos[@i].Descripcion" class="form-control" placeholder="Descripción del paso">@Model.Pasos[i].Descripcion</textarea>
                    <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">X</button>
                </div>
            }
        </div>
        <button type="button" class="btn btn-secondary" onclick="agregarPaso()">Añadir Paso</button>
    </div>

    <button type="submit" class="mt-4 bg-blue-600 text-white px-4 py-2 rounded">Guardar Cambios</button>
</form>

@section Scripts {
    <script>
        function agregarIngrediente() {
            const container = document.getElementById("ingredientesContainer");
            const count = container.children.length;
            const div = document.createElement("div");
            div.className = "input-group mb-2";
            div.innerHTML = `
                <input name="Ingredientes[${count}].Nombre" class="form-control" placeholder="Nombre" />
                <input name="Ingredientes[${count}].Cantidad" class="form-control" placeholder="Cantidad" />
                <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">X</button>`;
            container.appendChild(div);
        }

        function agregarPaso() {
            const container = document.getElementById("pasosContainer");
            const count = container.children.length;
            const div = document.createElement("div");
            div.className = "input-group mb-2";
            div.innerHTML = `
                <input name="Pasos[${count}].Orden" type="hidden" value="${count + 1}" />
                <textarea name="Pasos[${count}].Descripcion" class="form-control" placeholder="Descripción del paso"></textarea>
                <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">X</button>`;
            container.appendChild(div);
        }
    </script>
}

