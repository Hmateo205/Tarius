<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Tarius</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light ">
            <div class="container-fluid">
                <!-- Logo y Título -->
                <div style="display: flex; align-items: center; gap: 10px;">
                    <img src="~/resources/images/Logo.jpg" alt="Mobile and Wallet Image" width="70px">
                    <div>
                        <h1>Tarius</h1>

                        <!--           Slogan             <p>A simpler way to finance!</p>    -->
                    </div>


                </div>

                <!-- Botón de Colapso para Móviles -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú de Navegación -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- Botón siempre visible para Home -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Botón Dashboard (solo cuando el usuario está autenticado) -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Dashboard">Dashboard</a>
                            </li>
                            <!-- Botón Cerrar Sesión -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Logout">Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <!-- Botón de Inicio de Sesión (si no está autenticado) -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Inicio de Sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <!-- Scripts de Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: false)
    }
</body>
</html>
